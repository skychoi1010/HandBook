<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                app:lottie_autoPlay="true"
                android:visibility="visible"
                android:layout_marginBottom="-5dp"
                app:lottie_loop="true"
                app:lottie_repeatMode="reverse"
                app:lottie_rawRes="@raw/ios_waves"
                android:layout_gravity="center"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_120"
                android:visibility="visible"
                android:background="@color/water_color"></View>

        </LinearLayout>

    </LinearLayout>

    <com.waterdiary.drinkreminder.custom.NonSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_block">

    </com.waterdiary.drinkreminder.custom.NonSwipeableViewPager>

    <LinearLayout
        android:id="@+id/bottom_block"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="@string/str_back"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:fontFamily="@font/calibri_light"/>

            </LinearLayout>

            <View
                android:id="@+id/space"
                android:layout_width="@dimen/dp_10"
                android:layout_height="fill_parent"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/btn_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/drawable_button"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_next"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/str_next"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:fontFamily="@font/calibri_light"/>

            </LinearLayout>

        </LinearLayout>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            app:selectedDotColor="@color/white"
            app:dotsColor="@color/unactive_dot"
            app:dotsCornerRadius="8dp"
            app:dotsSize="10dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="5"
            />

    </LinearLayout>

</RelativeLayout>