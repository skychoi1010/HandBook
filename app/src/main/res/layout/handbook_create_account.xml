<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_transparant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_rounded_white_back"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/calibri_bold"
                android:gravity="left"
                android:padding="@dimen/dp_20"
                android:text="Create Account"
                android:textColor="@color/rdo_gender_select"
                android:textSize="45sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="left"
                    android:text="Name"
                    android:textColor="@color/black_48"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="@string/only_character"
                    android:fontFamily="@font/calibri_regular"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:maxLength="20"
                    android:textColor="@color/rdo_gender_select"
                    android:textSize="@dimen/sp_15"
                    android:minWidth="@dimen/dp_200"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="left"
                    android:text="Email id/Phone number)"
                    android:textColor="@color/black_48"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="@string/only_character"
                    android:fontFamily="@font/calibri_regular"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:maxLength="20"
                    android:textColor="@color/rdo_gender_select"
                    android:textSize="@dimen/sp_15"
                    android:minWidth="@dimen/dp_200"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Password"
                    android:textColor="@color/black_48"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/txt_pass_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="@string/only_character"
                    android:fontFamily="@font/calibri_regular"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:maxLength="20"
                    android:textColor="@color/rdo_gender_select"
                    android:textSize="@dimen/sp_15"
                    android:minWidth="@dimen/dp_200"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/calibri_bold"
                    android:gravity="center"
                    android:text="Confirm Password"
                    android:textColor="@color/black_48"
                    android:textSize="@dimen/sp_15" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/txt_pass_confirmpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="@string/only_character"
                    android:fontFamily="@font/calibri_regular"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:maxLength="20"
                    android:textColor="@color/rdo_gender_select"
                    android:textSize="@dimen/sp_15"
                    android:minWidth="@dimen/dp_200"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="@dimen/dp_30"
                android:id="@+id/createacc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:fontFamily="@font/calibri_regular"
                android:gravity="center"
                android:includeFontPadding="true"
                android:text="Create account"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_20"
                android:background="@color/white"
                android:minWidth="@dimen/dp_50">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>