<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_transparant"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_rounded_white_back"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/str_set_daily_goal"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/set_daily_goal"
            android:fontFamily="@font/calibri_light"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/lbl_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:inputType="number"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:maxLength="4"
                android:includeFontPadding="false"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="4500"
                android:textSize="@dimen/dp_30"
                android:textColor="@color/daily_goal_no"
                android:fontFamily="@font/calibri_bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="ml"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/daily_goal_no"
                android:fontFamily="@font/calibri_bold"/>

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbarGoal"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/rdo_gender_select"
            android:min="900"
            android:max="8000"
            android:thumb="@drawable/custom_thumb2"
            android:backgroundTint="@color/black_20"/>




        <RelativeLayout
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/drawable_button">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:layout_centerInParent="true"
                android:text="@string/str_save"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/white"
                android:fontFamily="@font/calibri_light"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/str_cancel"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/cancel_color"
                android:fontFamily="@font/calibri_light"/>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"
            android:layout_margin="@dimen/dp_15"
            android:text="@string/str_note"
            android:textSize="@dimen/dp_11"
            android:textColor="@color/note_color"
            android:fontFamily="@font/calibri_regular"/>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>